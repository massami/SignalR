@page
<link href="~/lib/toastr/css/toastr.css" rel="stylesheet" />
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" class="form-control" /></div>
    </div>
    <div class="row mt-2">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" class="form-control" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" class="btn btn-success" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
